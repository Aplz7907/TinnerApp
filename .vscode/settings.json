{
    "editor.minimap.enabled": false,
    "editor.fontFamily": "'Fira Code','JetBrains Mono',Consolas, 'Courier New', monospace",
    "editor.fontSize": 16,
    "editor.fontLigatures": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.accessibilitySupport": "off",
    "editor.guides.bracketPairs": true,
    "editor.guides.bracketPairsHorizontal": false,
    "files.associations": {
        "*.ts": "typescript"
    },
    "editor.wordWrap": "bounded",
    // "editor.wordWrap": "wordWrapColumn",
    "editor.wordWrapColumn": 120,
    "editor.rulers": [
        120
    ],
    "editor.lineHeight": 25,
    "editor.insertSpaces": true,
    "editor.tabSize": 4,
    "diffEditor.wordWrap": "on",
    "diffEditor.ignoreTrimWhitespace": true,
    "terminal.integrated.fontSize": 15,
    "debug.console.fontSize": 15,
    "files.autoSave": "onFocusChange",
    "security.workspace.trust.untrustedFiles": "open",
    "editor.codeActionsOnSave": {
        "source.fixAll.eslint": "explicit"
    },
    //TypeScript and JavaScript
    "[javascript][typescript]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.typescript-language-features",
    },
    "javascript.format.semicolons": "remove",
    "javascript.updateImportsOnFileMove.enabled": "always",
    "typescript.format.semicolons": "remove",
    "typescript.updateImportsOnFileMove.enabled": "always",
    "typescript.experimental.updateImportsOnPaste": true,
    "[css][scss][less]": {
        "editor.defaultFormatter": "vscode.css-language-features"
    },
    "[json][jsonc]": {
        "editor.defaultFormatter": "vscode.json-language-features"
    },
    //HTML
    "html.format.templating": true,
    // "html.format.wrapLineLength": 150,
    "[html]": {
        "editor.formatOnSave": true,
    },
    "[angular-html]": {
        // "editor.wordWrapColumn": 150
    },
    //golang
    "[go]": {
        //"editor.snippetSuggestions": "none",
        "editor.formatOnSave": true, //
        "editor.codeActionsOnSave": {
            "source.organizeImports": "explicit"
        }
    },
    "go.formatTool": "goimports",
    "go.toolsManagement.autoUpdate": true,
    "go.lintOnSave": "off", //
    "go.useLanguageServer": true,
    //json
    "[json]": {
        "editor.quickSuggestions": {
            "strings": true
        },
        "editor.suggest.insertMode": "replace"
    },
    //dart
    "[dart]": {
        "editor.selectionHighlight": false,
        "editor.suggest.snippetsPreventQuickSuggestions": false,
        "editor.suggestSelection": "first",
        "editor.tabCompletion": "onlySnippets",
        "editor.wordBasedSuggestions": "off"
    },
    "dart.openDevTools": "flutter",
    "dart.debugSdkLibraries": false,
    "dart.lineLength": 150,
    "dart.previewFlutterUiGuides": true,
    //git
    "git.autofetch": true,
    "git.enableSmartCommit": true,
    "git.confirmSync": false,
    "githubPullRequests.createOnPublishBranch": "never",
    //dotnet
    // "csharp.format.enable": true,
    // "[csharp]": {
    //     "editor.defaultFormatter": "ms-dotnettools.csharp"
    // },
    // ESLint
    "eslint.enable": true,
    "eslint.format.enable": true,
    "eslint.run": "onType",
    "eslint.validate": [
        "javascript",
        "typescript",
    ],
    "eslint.workingDirectories": [
        {
            "mode": "auto"
        }
    ],
    "eslint.codeAction.showDocumentation": {
        "enable": true
    },
    "eslint.lintTask.enable": true,
    //todo-tree
    "todo-tree.highlights.defaultHighlight": {
        "type": "text-and-comment"
    },
    "todo-tree.highlights.customHighlight": {
        "DONE:": {
            "icon": "check",
            "type": "tag",
            "iconColour": "#FFFFFF",
            "background": "#FFFFFF",
            "foreground": "#000000"
        },
        "TODO:": {
            "icon": "info",
            "iconColour": "#F7EC59",
            "background": "#F7EC59",
            "foreground": "#000000",
            "gutterIcon": true
        },
        "BUG:": {
            "icon": "bug",
            "foreground": "#000000",
            "background": "#8CB369",
            "iconColour": "#8CB369",
            "gutterIcon": true
        },
        "FIXME:": {
            "icon": "flame",
            "foreground": "#FFFFFF",
            "background": "#6E0D25",
            "iconColour": "#FF6B6B",
            "gutterIcon": true
        }
    },
    "todo-tree.general.tagGroups": {
        "TODO:": [
            "Todo:",
            "todo:"
        ],
        "DONE:": [
            "Done:",
            "done:",
            "Todone:"
        ],
        "FIXME:": [
            "Fix:",
            "fix:"
        ],
        "BUG:": [
            "Bug:",
            "bug:"
        ]
    },
    "todo-tree.general.tags": [
        "BUG:",
        "HACK:",
        "FIXME:",
        "TODO:",
        "Todo:",
        "todo:",
        "DONE:",
        "Done:",
        "done:",
        "Todone:",
        "FIXME:",
        "Fix:",
        "fix:",
        "BUG:",
        "Bug:",
        "bug:"
    ],
    "liveServer.settings.donotShowInfoMsg": true,
    "liveServer.settings.port": 5736,
    "liveServer.settings.CustomBrowser": "microsoft-edge",
    "liveServer.settings.host": "localhost",
    "liveServer.settings.donotVerifyTags": true,
    "editor.stickyScroll.scrollWithEditor": false,
    "editor.stickyScroll.enabled": false,
    "explorer.confirmDelete": false,
    "explorer.compactFolders": false,
    "cSpell.showAutocompleteSuggestions": true,
    "cSpell.userWords": [
        "maxlength"
    ],
    "codesnap.backgroundColor": "#fffff",
    "codesnap.boxShadow": "rgba(0, 0, 0, 0) 0px 0px 0px",
    "codesnap.containerPadding": "2.5em",
    "codesnap.showWindowControls": false,
    "codesnap.realLineNumbers": true,
    "cSpell.language": "en,en-US",
}